name: Super-linter

on:
  push:
    branches-ignore:
      - main  # Replace with your default branch if needed
      - master

jobs:
  super-linter:
    name: Lint codebase
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Super-Linter
        uses: github/super-linter@v4
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          validate-yaml: true
          validate-markdown: true
          validate-html: true
          validate-python: true
          validate-javascript: true
          validate-json: true
          validate-shell: true
          validate-php: true
          validate-java: true
          validate-ruby: true
          validate-go: true
          validate-yaml-filename: ".github/linters/super-linter.yaml"
          validate-markdown-filename: ".github/linters/super-linter.md"
          validate-html-filename: ".github/linters/super-linter.html"
          validate-python-filename: ".github/linters/super-linter.py"
          validate-javascript-filename: ".github/linters/super-linter.js"
          validate-json-filename: ".github/linters/super-linter.json"
          validate-shell-filename: ".github/linters/super-linter.sh"
          validate-php-filename: ".github/linters/super-linter.php"
          validate-java-filename: ".github/linters/super-linter.java"
          validate-ruby-filename: ".github/linters/super-linter.rb"
          validate-go-filename: ".github/linters/super-linter.go"

